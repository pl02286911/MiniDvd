<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  		<servlet-name>user</servlet-name>
  		<servlet-class>org.zucc.controller.UserServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>user</servlet-name>
  		<url-pattern>/regist.do</url-pattern>
  		
  </servlet-mapping>
 
  <servlet-mapping>
  		<servlet-name>user</servlet-name>
  		<url-pattern>/login.do</url-pattern>
  		
  </servlet-mapping>
   
  <servlet>
  		<servlet-name>topic</servlet-name>
  		<servlet-class>org.zucc.controller.TopicServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>topic</servlet-name>
  		<url-pattern>/addtopic.do</url-pattern>
  		
  </servlet-mapping>
   <servlet>
  		<servlet-name>press</servlet-name>
  		<servlet-class>org.zucc.controller.PressServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>press</servlet-name>
  		<url-pattern>/addnews.do</url-pattern>
  		
  </servlet-mapping>
</web-app>
